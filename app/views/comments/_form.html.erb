<%= render 'shared/error_messages', object: comment %>

<%= form_for [topic, comment] do |f| %>
	<%= f.label :description, 'Comment' %><br />
	<%= f.text_area :description, placeholder: "What's up...", cols: 60, rows: 5 %>
	<%= f.hidden_field :user_id, value: "#{current_user.id}" %>
  <p><%= f.submit %></p>
<% end %>