<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.name %></td>
    <td><%= link_to 'Show', gallery_document_path(id: document) %></td>
    <td><%= link_to 'Edit', edit_gallery_document_path(id: document) %></td>
    <td><%= link_to 'Destroy', gallery_document_path(id: document), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

