<%= form_for [@gallery, @document], html: {multipart: true} do |f| %>
	<%= render 'shared/error_messages', object: @document %>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :document %><br/>
    <%= f.file_field :document %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
