<tr id="<%= topic.id %>">
  <td width="25%"><%= topic.title %></td>
  <td width="25%"><%= topic.description %></td>
  <td width="25%">
    <%= link_to 'Show', topic, class: 'btn btn-mini' %>
    <%= link_to 'Edit', edit_topic_path(topic), class: 'btn btn-mini' %>
    <%= link_to 'Destroy', topic, confirm: 'Are you sure?', method: :delete, remote: true, class: 'btn btn-mini' %>
  </td>
</tr>