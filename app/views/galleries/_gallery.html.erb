<tr id="<%= gallery.id %>">
  <td width="25%"><%= link_to gallery.name, gallery_path(gallery) %></td>
  <td width="25%"><%= gallery.description %></td>
  <td width="25%">
    <%= link_to 'Edit', edit_gallery_path(gallery), class: 'btn btn-mini' %>
    <%= link_to 'Destroy', gallery, remote: true, :method => :delete, :confirm => 'Are you sure?', class: 'btn btn-mini' %>
  </td>
</tr>