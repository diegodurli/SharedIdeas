<h2>Gallery</h2>

<p>
  <b>Name</b><br>
  <%= @gallery.name %>
</p>

<p>
  <b>Description</b><br>
  <%= @gallery.description %>
</p>

<div class="form-actions">
  <%= link_to 'Back', galleries_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_gallery_path(@gallery), :class => 'btn' %>
  <%= link_to 'Delete', gallery_path(@gallery), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
